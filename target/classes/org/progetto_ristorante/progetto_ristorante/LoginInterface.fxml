<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #F5DEB3; -fx-padding: 20;">

    <!-- Distance Among Elements -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!-- Distance Among Elements -->

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Title -->
    <Text text="LOGIN" style="-fx-font-size: 30px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>
    <!-- Title -->

    <!-- Username and Password -->
    <TextField fx:id="loginUsername" promptText="Username" maxWidth="300" focusTraversable="false"
               style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'"/>
    <PasswordField fx:id="loginPassword" promptText="Password" maxWidth="300" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'"/>
    <!-- Username and Password -->

    <!-- Buttons -->
    <Button fx:id="loginButton" text="Accedi" onAction="#login"
            style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #228B22; -fx-border-width: 1"/>
    <HBox spacing="5.0" alignment="CENTER">
        <Text text="Non hai un account?" style="-fx-font-size: 30px; -fx-font-family: 'Helvetica'"/>
        <Text text="Registrati" underline="true" onMouseClicked="#showRegisterInterface" fill="#32CD32" style="-fx-font-size: 30px; -fx-font-family: 'Helvetica'"/>
    </HBox>
    <!-- Buttons -->

    <!-- Error Messages -->
    <Text fx:id="loginError" visible="false" fill="red" style="-fx-font-family: 'Helvetica'; -fx-font-size: 30px"/>
    <!-- Error Messages -->
</VBox>
