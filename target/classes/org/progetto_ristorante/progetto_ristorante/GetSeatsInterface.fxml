<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #F5DEB3; -fx-font-family: 'Helvetica'">

    <!-- Logo -->
    <ImageView fitHeight="150" fitWidth="150">
        <Image url="@images/logo.png"/>
    </ImageView>
    <!-- Logo -->

    <!-- Required Seats -->
    <VBox fx:id="seatsBox" spacing="20.0" alignment="CENTER">
        <Text text="Benvenuto, di quanti posti hai bisogno?" style="-fx-font-size: 30px"/>
        <TextField fx:id="requiredSeatsField" promptText="Posti richiesti" maxWidth="280" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-prompt-text-fill: #808080"/>
        <Button fx:id="confirmSeatsButton" text="Conferma" onAction="#getRequiredSeats"
                style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF"/>
    </VBox>
    <!-- Required Seats -->

    <!-- Additional Elements for Waiting -->
    <VBox fx:id="waitingBox" spacing="20.0" visible="false" alignment="CENTER">
        <Text fx:id="waitingMessage" visible="false" style="-fx-font-size: 30px"/>
        <HBox spacing="10.0" alignment="CENTER">
            <Button fx:id="waitingButton" text="Si, attendo" onAction="#waitButton"
                    style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF"/>
            <Button fx:id="leavingButton" text="No, me ne vado" onAction="#leave"
                    style="-fx-font-size: 30px; -fx-background-color: #FF4500; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF"/>
        </HBox>
    </VBox>
    <!-- Additional Elements for Waiting -->

    <!-- Error Message -->
    <Text fx:id="unavailableReceptionist" visible="false" fill="red" style="-fx-font-size: 30px"/>
    <!-- Error Message -->
</VBox>
