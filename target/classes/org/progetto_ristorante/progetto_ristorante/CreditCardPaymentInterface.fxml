<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.progetto_ristorante.progetto_ristorante.CustomerController"
      style="-fx-background-color: #F5DEB3; -fx-padding: 20; -fx-border-color: #D2B48C; -fx-border-width: 2; -fx-border-radius: 10;">

    <!-- Card Details -->
    <VBox fx:id="cardBox" spacing="20.0" alignment="CENTER">
        <Text text="Dati Carta" style="-fx-font-size: 35px; -fx-fill: #32CD32; -fx-font-family: 'Helvetica'; -fx-font-weight: bold"/>
        <TextField fx:id="cardNumberField" promptText="Numero" maxWidth="300" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'; -fx-prompt-text-fill: #808080;"/>
        <TextField fx:id="cardNameField" promptText="Intestatario" maxWidth="300" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'; -fx-prompt-text-fill: #808080;"/>
        <TextField fx:id="expiryDateField" promptText="Data Scadenza" maxWidth="300" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'; -fx-prompt-text-fill: #808080;"/>
        <TextField fx:id="cvvField" promptText="CVV" maxWidth="300" focusTraversable="false"
                   style="-fx-font-size: 30px; -fx-background-color: #F9F6F7; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8; -fx-font-family: 'Helvetica'; -fx-prompt-text-fill: #808080;"/>
        <!-- Card Details -->

        <!-- Pay Button -->
        <Button fx:id="payButton" text="Paga" onAction="#pay"
                style="-fx-font-size: 30px; -fx-background-color: #32CD32; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-text-fill: #FFFFFF; -fx-font-family: 'Helvetica'; -fx-border-color: #228B22; -fx-border-width: 1"/>
        <!-- Pay Button -->
    </VBox>

    <!-- Payment Confirmation Message -->
    <Label fx:id="paymentConfirmationLabel" style="-fx-font-size: 30px; -fx-font-family: 'Helvetica'" visible="false" textFill="red"/>
    <!-- Payment Confirmation Message -->
</VBox>
